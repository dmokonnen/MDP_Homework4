<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopppingActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Shop by Categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <LinearLayout
        android:id="@+id/electronics"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageButton
            android:id="@+id/electronicsImg"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="#FFFFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/shopping_electronics" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Electronics" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clothing"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/electronics"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageButton
            android:id="@+id/clothingImg"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="#FFFFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/shopping_clothes" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Clothing" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/beauty"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/electronics">

        <ImageButton
            android:id="@+id/beautyImg"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="#FFFFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/shopping_beautiy" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Beauty" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/food"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/beauty"
        app:layout_constraintTop_toBottomOf="@+id/clothing">

        <ImageButton
            android:id="@+id/foodImg"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="#FFFFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/shopping_food" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Food" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>